<p id="notice"><%= notice %></p>

<h1>Regions</h1>

<table>
  <thead>
    <tr>
      <th>Region</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @regions.each do |region| %>
      <tr>
        <td><%= region.Region %></td>
        <td><%= region.Description %></td>
        <td><%= link_to 'Read', region %></td>
        <td><%= link_to 'Update', edit_region_path(region) %></td>
        <td><%= link_to 'Delete', region, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

